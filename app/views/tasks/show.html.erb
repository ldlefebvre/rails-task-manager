<h1><%= @task.title %></h1>
<div>
  <p><%= @task.details %></p>
  <div class="d-flex">
      <input type="checkbox" id="taskCheckbox">
      <label for="taskCheckbox"><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></label>
  </div>
</div>
<p><%= link_to "Edit this task", edit_task_path(@task.id) %></p>
<p><%= link_to "Back to list", tasks_path %></p>
<%= link_to "Delete",
  delete_task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
