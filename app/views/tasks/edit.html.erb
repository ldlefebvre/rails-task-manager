<h1>Edit task</h1>
<%= form_with model: @task do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>
  <%= t.label :details %>
  <%= t.text_field :details %>
  <div class="d-flex">
      <%= t.check_box :completed %>
      <%= t.label :completed, "Completed" %>
  </div>
  <%= t.submit %>
<% end %>

<!-- Create Task -->
<p><%= link_to "Back to list", tasks_path %></p>
